{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "leemons": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb-base",
    "prettier"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "import",
    "prettier"
  ],
  "rules": {
    "no-plusplus": "off",
    "import/no-dynamic-requires": "off",
    "import/no-extraneous-dependencies": "off",
    "react/react-in-jsx-scope": "off",
    "no-underscore-dangle": "off",
    "prettier/prettier": [
      2,
      {},
      {
        "usePrettierrc": true
      }
    ],
    "import/no-names-as-default": "off",
    "import/no-unresolved": [
      2,
      {
        "ignore": [
          "@academic-calendar",
          "@academic-portfolio",
          "@admin",
          "@assets",
          "@assignables",
          "@board-messages",
          "@calendar",
          "@common",
          "@comunica",
          "@content-creator",
          "@curriculum",
          "@dashboard",
          "@dataset",
          "@emails",
          "@emails-amazon-ses",
          "@emails-smtp",
          "@families",
          "@feedback",
          "@fundae",
          "@grades",
          "@layout",
          "@leebrary",
          "@leebrary-tasks",
          "@leebrary-tests",
          "@menu-builder",
          "@multilanguage",
          "@package-manager",
          "@scores",
          "@socket-io",
          "@tasks",
          "@tests",
          "@timetable",
          "@users",
          "@widgets",
          "@xapi",
          "@bubbles-ui"
        ]
      }
    ]
  }
}
