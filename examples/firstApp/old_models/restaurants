module.exports = {
  collectionName: 'restaurants',
  info: {
    name: 'restaurantes',
    description: 'Los restaurantes',
  },
  options: {
    useTimestamps: true,
  },
  attributes: {
    name: {
      type: 'string',
      options: {
        notNull: false,
      },
    },
    direction: {
      references: {
        collection: 'global.direction',
        relation: 'one to one',
      },
    },
    menu: {
      references: {
        collection: 'global.menu',
        relation: 'many to many',
      },
    },
    category: {
      references: {
        collection: 'global.category',
        relation: 'one to many',
      },
    },
    users: {
      references: {
        collection: 'global.users',
        relation: 'many to many',
      },
    },
  },
};
